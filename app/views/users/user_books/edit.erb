<h2>Update Your Book</h2>

<form method="post" action="/user_books/:title">
<label for="book_title">
  <input type="text" name="book[title]" id ="book_title"> </input>
  <label for="book_author">
  <input type="text" name="book[author]" id ="book_author"> </input>
  <label for="book_description">
  <input type="text" name="book[description]" id ="book_description"> </input>
  <label for="book_rank">
  <input type="text" name="book[rank]" id ="book_rank"> </input>
  
  <label>Have your read this book?</label>
    <input type="checkbox" name="book" id="<%=user.id%>" value="<%=user.id%>"><%=username%></input>
    
    <input type="submit" value="Update">
  </form>